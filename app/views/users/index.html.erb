<h1 class="users-list">Users List</h1>
<ul>
<% @users.each do |user| %>
  <li class="card user-card">
    <img src = "<%= user.photo %>" alt="user" class="profile-picture">
    <div class="user-details">
          <h2><%= user.name %></h2>
          <p class="number-of-posts bottomright">
          <%= link_to "Number of posts: #{user.posts_counter}", user_path(user) %>
        </p>
    </div>
  </li>
<% end %>
</ul>